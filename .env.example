# ============================================
# AI Incident Agent - Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your values
# ============================================

# ------------------------------------------
# n8n Orchestrator
# ------------------------------------------
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://your-instance.app.n8n.cloud/webhook/incident-agent
NEXT_PUBLIC_MODE=simulation

# ------------------------------------------
# OpenAI API
# ------------------------------------------
OPENAI_API_KEY=sk-...

# ------------------------------------------
# Pinecone Vector Database
# ------------------------------------------
PINECONE_API_KEY=
PINECONE_INDEX_HOST=sap-incidents-xxx.svc.us-east-1-aws.pinecone.io
PINECONE_INDEX_NAME=sap-incidents

# ------------------------------------------
# Atlassian (Jira + Confluence)
# ------------------------------------------
ATLASSIAN_EMAIL=your-email@company.com
ATLASSIAN_API_TOKEN=
ATLASSIAN_DOMAIN=yourcompany.atlassian.net
JIRA_PROJECT_KEY=SAP
CONFLUENCE_SPACE_KEY=SAPKB

# ------------------------------------------
# Slack
# ------------------------------------------
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#incident-alerts

# ------------------------------------------
# Email (Gmail SMTP)
# ------------------------------------------
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# ------------------------------------------
# Google Sheets
# ------------------------------------------
GOOGLE_SHEETS_SPREADSHEET_ID=
GOOGLE_SHEETS_SHEET_NAME=Sheet1
